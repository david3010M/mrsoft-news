                    "News"
                ],
                "summary": "Get all news",
                "description": "Display a listing of the resource.",
                "operationId": "e9bbde231983d3a541f5d7223ae5466f",
                "parameters": [
                    {
                        "name": "product",
                        "in": "query",
                        "description": "Product name",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "Gesrest",
                                "360sys",
                                "HotelHUB",
                                "Comprobante-e"
                            ]
                        }
                    },
                    {
                        "name": "category",
                        "in": "query",
                        "description": "Category name",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "Noticias",
                                "Eventos",
                                "Promociones"
                            ]
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Limit of news",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/NewsRelatedResourceCollection"
